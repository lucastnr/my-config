[
  {
    "context": "Editor",
    "bindings": {
      "shift-alt-f": "editor::Format",
      "alt-space": "copilot::Suggest"
    }
  },
  {
    "bindings": {
      "cmd-shift-g": "git_panel::ToggleFocus",
      "alt-z": "editor::ToggleSoftWrap",
      "ctrl-r": "projects::OpenRecent",
      "cmd-b": "workspace::ToggleRightDock",
      "cmd-shift-c": [
        "task::Spawn",
        {
          "task_name": "Open warp"
        }
      ]
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "cmd-ctrl-g": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "Editor && (extension==js || extension==jsx || extension==ts || extension==tsx)",
    "bindings": {
      "alt-d": [
        "workspace::SendKeystrokes",
        "/** enter enter space */ up space * space"
      ],
      "alt-l": ["workspace::SendKeystrokes", "enter * space"]
    }
  }
]
