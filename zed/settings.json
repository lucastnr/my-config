{
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "profiles": {
      "everything": {
        "name": "Everything",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "dock": "left"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "dark": "One Black",
    "light": "One Light"
  },
  "experimental.theme_overrides": {
    "editor.background": "#00000",
    "syntax": {
      "comment": {
        "color": "#878e98"
      }
    }
  },
  "project_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "auto_update": true,
  "soft_wrap": "editor_width",
  "ui_font_size": 20,
  "buffer_font_size": 16,
  "format_on_save": "on",
  "formatter": "prettier",
  "file_types": {
    "HTML": ["svg"]
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "experimental": {
          "classRegex": [
            ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
            ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
          ]
        }
      }
    }
  },
  "file_scan_inclusions": ["apps/web/.env*", "apps/bifrost/.env*", ".env*"],
  "file_scan_exclusions": [
    // Start Zed Defaults
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // End Zed Defaults
    "**/.yarn",
    "**/.nx",
    "**/.idea",
    "**/.github",
    "**/android/app/build",
    "**/ios/Pods",
    "**/.cursor",
    "**/.next",
    "**/.vercel",
    "**/dist"
  ],
  "context_servers": {
    "atlassian": {
      "command": "npx",
      "args": ["mcp-remote", "https://mcp.atlassian.com/v1/sse"],
      "source": "custom"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp-server"],
      "source": "custom"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@kazuph/mcp-fetch"],
      "source": "custom"
    },
    "browser-tools": {
      "command": "npx",
      "args": ["-y", "@agentdeskai/browser-tools-mcp"],
      "source": "custom"
    }
  }
}
