{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "base_keymap": "VSCode",
  "theme": "One Black",
  "experimental.theme_overrides": {
    "editor.background": "#00000",
    "syntax": {
      "comment": {
        "color": "#878e98"
      }
    }
  },
  "project_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "auto_update": true,
  "soft_wrap": "editor_width",
  "ui_font_size": 20,
  "buffer_font_size": 16,
  "format_on_save": "on",
  "formatter": "prettier",
  "file_types": {
    "HTML": ["svg"]
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "experimental": {
          "classRegex": [
            ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
            ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
          ]
        }
      }
    }
  }
"file_scan_inclusions": [".env*"],
}
